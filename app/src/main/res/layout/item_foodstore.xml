<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_group_780"
        android:background="@drawable/bg_petstore"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:elevation="5dp"/>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mòe - Ó"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide a full range of nutrients to help pet stay healthy and happy."
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_change"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="500"
            android:textColor="@color/white"
            android:background="@drawable/chieu"
            android:padding="8dp"
            android:textSize="16dp"
            android:drawableEnd="@drawable/ic_heart1"
            android:drawablePadding="5dp" />
        <TextView
            android:id="@+id/tv_stored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stored: 0"
            android:textSize="12dp"
            android:textColor="#8A97BA"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</LinearLayout>