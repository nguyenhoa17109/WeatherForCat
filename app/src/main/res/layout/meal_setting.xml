<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Meo's profile"
        android:textSize="30dp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sang"
        android:layout_margin="24dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv1"
            android:text="Breakfast"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginRight="70dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="09:30 AM"
            android:textSize="34dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="100dp"
            android:layout_below="@id/tv1"/>

        <Switch
            android:id="@+id/sw_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E36E79"
            android:foregroundGravity="center"
            android:layout_toRightOf="@id/tv_time1"
            android:gravity="bottom|right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chieu"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv2"
            android:text="Lunch"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginRight="70dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="12:30 AM"
            android:textSize="34dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="100dp"
            android:layout_below="@id/tv2"/>

        <Switch
            android:id="@+id/sw_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7C5E90"
            android:foregroundGravity="center"
            android:layout_toRightOf="@id/tv_time2"
            android:gravity="bottom|right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/day"
        android:layout_margin="24dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv3"
            android:text="Dinner"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginRight="70dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/tv_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="07:30 PM"
            android:textSize="34dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="100dp"
            android:layout_below="@id/tv3"/>

        <Switch
            android:id="@+id/sw_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2E4859"
            android:foregroundGravity="center"
            android:layout_toRightOf="@id/tv_time3"
            android:gravity="bottom|right" />
    </RelativeLayout>

    <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/back_noti_in"
                android:padding="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textColor="#2E4859"/>
                <TextView
                    android:id="@+id/tvNoti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bạn có thể cài đặt thời gian ăn uống tại đây, ấn vào từng thẻ để có thể cài đặt thời gian. Bạn cũng có thể bỏ thông báo cho một số bữa mà bạn không mong muốn"
                    android:textSize="14dp"
                    android:textColor="#48567B"/>
            </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>


</LinearLayout>