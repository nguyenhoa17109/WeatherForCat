<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FragmentUser">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Meo's profile"
        android:textSize="30dp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/back_notification"
        android:padding="15dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_notification"
            android:src="@drawable/img_noti"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/tv_name"
                android:text="Meo"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="32dp"
                android:textColor="#2E4859"
                android:layout_marginRight="70dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="top|right"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@id/tv_name"
                android:background="@color/white"
                android:drawableEnd="@drawable/ic_edit" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Mô tả mèo méo meo, mèo méo meo
                 nà khó tính vcl but nó iu m lắm."
                android:textColor="#2E4859"
                android:layout_below="@id/tv_name"/>
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your asset"
        android:textColor="#2E4859"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"/>

    <TableLayout
        android:stretchColumns="*"
        android:layout_margin="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like"
                    android:textColor="#2E4859"
                    android:textSize="14dp"/>
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_noti1"
                    android:layout_below="@id/tv1"
                    />
                <TextView
                    android:id="@+id/txt_like"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="356"
                    android:textColor="#2E4859"
                    android:textSize="34dp"
                    android:layout_below="@id/tv1"
                    android:layout_toRightOf="@+id/iv1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textColor="#2E4859"
                    android:textSize="14dp"/>
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_food"
                    android:layout_below="@id/tv2"
                    />
                <TextView
                    android:id="@+id/txt_feed"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="14"
                    android:textColor="#2E4859"
                    android:textSize="34dp"
                    android:layout_below="@id/tv2"
                    android:layout_toRightOf="@+id/iv2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cat number"
                    android:textColor="#2E4859"
                    android:textSize="14dp"/>
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/img_noti3"
                    android:layout_below="@id/tv3"
                    />
                <TextView
                    android:id="@+id/txt_numcat"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="6"
                    android:textColor="#2E4859"
                    android:textSize="34dp"
                    android:layout_below="@id/tv3"
                    android:layout_toRightOf="@+id/iv3"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_shop"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shopping"
        android:textAllCaps="false"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:drawableLeft="@drawable/ic_buy"
        android:drawablePadding="30dp"
        android:background="@drawable/back_noti_in"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_setting"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textAllCaps="false"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:drawableLeft="@drawable/ic_setting"
        android:drawablePadding="30dp"
        android:background="@drawable/back_noti_in"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_change"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change cat"
        android:textAllCaps="false"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:drawableLeft="@drawable/ic_buy"
        android:drawablePadding="30dp"
        android:background="@drawable/back_noti_in"/>

</LinearLayout>